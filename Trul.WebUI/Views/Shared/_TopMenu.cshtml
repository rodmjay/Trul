@model string
@using Trul.WebUI.Helper
<div class="navbar">
    <div class="navbar-inner">
        <ul class="nav">
            <li class="@(Model.Equals("Home") ? "active" : "")">
                @Html.ActionLink(Html.GetGlobalResource("Home"), "Index", "Home")
            </li>
            <li class="@(Model.Equals("Country") ? "active" : "")">
                @Html.ActionLink(Html.GetGlobalResource("Country"), "Index", "Country")</li>
        </ul>
        <ul class="nav pull-right">
            <li class="divider-vertical"></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Html.GetGlobalResource("Language") <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink(Html.GetGlobalResource("Turkish"), ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["Controller"].ToString(), new { language = "tr", culture = "TR" }, null)</li>
                    <li>@Html.ActionLink(Html.GetGlobalResource("English"), ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["Controller"].ToString(), new { language = "en", culture = "US" }, null)</li>
                </ul>
            </li>
        </ul>
    </div>
</div>
